{
 "properties": {
  "displayName": "KeyVault SoftDelete should be enabled",
  "policyType": "Custom",
  "mode": "All",
  "description": "This policy enables you to ensure when a Key Vault is created with out soft delete enabled it will be added.",
  "metadata": {
   "version": "1.0.0",
   "category": "Key Vault",
   "createdBy": "1a6c5ab2-307a-4c45-a4c8-b45ac8af8b2e",
   "createdOn": "2021-03-16T18:45:05.3434492Z",
   "updatedBy": null,
   "updatedOn": null
  },
  "parameters": {},
  "policyRule": {
   "if": {
    "anyOf": [
     {
      "allOf": [
       {
        "field": "type",
        "equals": "Microsoft.KeyVault/vaults"
       },
       {
        "field": "Microsoft.KeyVault/vaults/enableSoftDelete",
        "notEquals": false
       }
      ]
     }
    ]
   },
   "then": {
    "effect": "append",
    "details": [
     {
      "field": "Microsoft.KeyVault/vaults/enableSoftDelete",
      "value": true
     }
    ]
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementGroups/caf/providers/Microsoft.Authorization/policyDefinitions/Append-KV-SoftDelete",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "Append-KV-SoftDelete"
}
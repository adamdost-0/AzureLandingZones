{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "AppOwner": {
                    "type": "string",
                    "defaultValue": "app1"
                },
                "Size": {
                    "type": "string",
                    "defaultValue": "small"
                },
                "StartingAddress": {
                    "type": "string",
                    "defaultValue": "10.0.0.0"
                }    
    },
    "variables": {
        "octets": "[split(parameters('StartingAddress'),'.')]",
        
    },
    "resources": [
    ],
    "outputs": {
        "output": {
            "type": "string",
            "value": "[variables('octets')[0]]"
        }
    }
  }